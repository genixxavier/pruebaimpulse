colorazul = #046585
colorceleste = #01abcc
colornaranja = #ff8e0c
button:focus { outline: none; }
body
  font-size: 14px
.menus
    position: fixed;
    z-index: 99;
    background: #ffff;
    width: 100%;
    top:0px
#banner
  margin-top: 55px
  background: url('../img/banner.jpg')center no-repeat
  background-size: cover
  height: calc(100vh - 55px);
  position: relative;
  .box-texto
    padding-top: 20%
    h2
      color: colorazul
      font-size: 50px
      font-weight: 700
      margin: 0px 0px 15px 0px
      line-height: 40px
      &.cceleste
        color: colorceleste
    p
      color: colorazul
      font-size: 25px
      font-weight: 500
      line-height: 25px
      margin: 30px 0px
    h4
      color: #fff
      font-size: 32px
      line-height: 32px
      margin: 0px;
      font-weight: 500
      margin-bottom: 20px
    .btn-naranaja
      background: colornaranja
      padding: 20px 60px
      font-size: 22px
      line-height: 20px
      color: #fff
      font-weight: 500
      border-radius: 10px
      border: 0px
  .flecha
    text-align: center;
    position: absolute;
    width: 100%
    bottom: 50px
    a
      background: #fff
      padding: 15px
      border-radius: 50%
      width: 60px
      height: 60px
      display: inline-block;
      img
        width: 100%
#seccion1
  background: #72a5c0
  padding: 80px 0px
  .contet-text
    h2
      color: #fff
      text-align: center;
    .menu
      list-style: none;
      margin: 0px
      padding: 0px
      li
        a
          color: #fff
          font-size: 20px
          padding: 10px 0px
          font-weight: 500
          display: block;
          &.active
            color: colorazul
          &:hover
            text-decoration: none;
            color: colorazul
.seccion
  padding: 80px 0px

.h-titulo
  text-align: center;
  h2
    color: colorazul
    font-size: 30px
    font-weight: 500
    margin: 0px
    margin-bottom: 20px
    span
      color: colorceleste
  p
    font-size: 18px
    color: #1e5d71
    line-height: 30px
  .btn-naranaja
    background: colornaranja
    padding: 15px 80px
    font-size: 16px
    line-height: 18px
    color: #fff
    font-weight: 500
    border-radius: 10px
    border: 0px
.slider1
  .owl-stage
    padding-top: 34px;
    .item
      &:hover
        transform: scale(1.1)
        .persona
          border-radius: 15px;
          >div
            display: block;
  .persona
    text-align: center;
    background: #fff;
    border-top: 8px solid red;
    border-bottom: 8px solid red;
    &.p1
      border-color: #a38d7f
    &.p2
      border-color: #9d7d67
    &.p3
      border-color: #906656
    &.p4
      border-color: #6e4939
    &.p5
      border-color: #473935
    &.p6
      border-color: #2c2c29
    img
      max-width: 100%
      padding: 0px 20px
    h2
      margin: 0px
      margin-top: 10px
      font-size: 18px
      color: #906656
    .subtitle
      color: #906656
    p
      margin: 0px
      font-size: 14px
      line-height: 18px
      padding: 0px 10px
    >div
      display: none
#contenido2
  background: #d6f2f6
  p
    font-size: 18px
    color: #1e5d71
    line-height: 30px
  .btn-naranaja
    background: colornaranja
    padding: 15px 80px
    font-size: 16px
    line-height: 18px
    color: #fff
    font-weight: 500
    border-radius: 10px
    border: 0px
  .slider2
    margin-left: 80px
    margin-right: 80px
    padding: 40px 0px
  .itembox
    background: #fff
    text-align: center;
    border-radius: 15px
    padding: 20px 40px
    h2
      font-size: 20px
      color: colorazul
    p
      font-size: 16px
      line-height: 16px
      color: #222
#contenido3
  background: url(../img/banner2.jpg)right no-repeat
  background-size: cover;
// #contenido4
.bggris
  background: #fcfcfc
  padding-bottom: 30px
  .boderb
    &:after
      content: ''
      border-bottom: 2px dashed colorazul
      width: 100%
      height: 2px
      display: block;
      z-index: 99
      position: relative;
  .box-items
    padding: 80px 0px
    h2
      font-size: 28px
      color: colorazul
    p
      font-size: 18px
  .box-img
    background: #fff;
    text-align: center;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0px 0px 4px #ddd
footer
  background: colorazul
  color: #fff
  padding: 10px 0px 5px
  p
    margin: 0px 0px 5px 0px
    font-size: 16px
    line-height: 16px
    &.min
      font-size: 14px
      line-height: 14px
.owl-nav
  position: absolute;
  top: 45%;
  width: 100%;
  .owl-prev
    left: -60px;
    position: absolute;
  .owl-next
    right: -60px
    position: absolute;
.owl-theme .owl-nav [class*=owl-]:hover
  background: transparent
@media (max-width : 414px)
  #contenido2
    .slider2
      margin: 0px
  .boderb
    >.row
      padding-bottom: 20px
